#!/usr/bin/env python3
"""
Synapse System - Unified CLI Entry Point
========================================

Main executable for the Synapse System with intelligent command routing.
"""

import sys
import os
from pathlib import Path

# Add lib directory to Python path
synapse_home = Path(__file__).parent.parent.resolve()
lib_dir = synapse_home / "lib"
sys.path.insert(0, str(lib_dir))

try:
    from cli import main
except ImportError as e:
    print(f"Error: Failed to import Synapse CLI modules: {e}", file=sys.stderr)
    print(f"Make sure the lib directory exists at: {lib_dir}", file=sys.stderr)
    sys.exit(1)

if __name__ == "__main__":
    sys.exit(main())